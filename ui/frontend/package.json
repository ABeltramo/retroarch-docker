{
  "private": true,
  "name": "games-on-whales",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build --no-sw --no-prerender --no-esm",
    "serve": "sirv build --host 0.0.0.0 --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "test": "jest ./tests"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "@dr.pogodin/babel-plugin-react-css-modules": "^6.1.1",
    "@wailsapp/runtime": "^1.1.1",
    "bootstrap": "^5.0.2",
    "holderjs": "^2.9.9",
    "preact": "^10.3.1",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1",
    "react-bootstrap": "^1.6.1",
    "valid-data-url": "^4.0.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/holderjs": "^2.9.2",
    "@types/jest": "^26.0.8",
    "@types/react-css-modules": "^4.6.4",
    "@types/valid-data-url": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.1.1",
    "jest": "^26.2.2",
    "jest-preset-preact": "^4.0.2",
    "mkdirp": "^1.0.4",
    "postcss-preset-env": "^6.7.0",
    "preact-cli": "^3.2.2",
    "sirv-cli": "^1.0.0-next.3",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.3.5",
    "typescript-plugin-css-modules": "^3.4.0"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ]
  }
}
